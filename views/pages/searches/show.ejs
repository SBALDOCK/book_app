<!DOCTYPE html>
<html lang=“en”>
  <head>
    <%- include('../head.ejs') %>
  </head>
  <body>
    <main>
      <div class="container">
        <div class="one">
          <h1>Best Books!</h1>
        </div>
        <div class="two">
          <h1>Search Results</h1>
        </div>
        <% books.forEach( book => { %>
          <form action='/addBook' method="post"></form>
            <div class="three">
              <img src="<%=book.image%>" alt="<%=book.title%>" />
              <h3>"<%=book.title%>"</h3>
              <h4>"<%=book.authors%>"</h4>
              <p>"<%=book.description%>"</p>
            </div>
            <input type=hidden src="<%=book.image%>" alt="<%=book.title%>" />
            <input type=hidden name="title" value=<%=book.title%> />
            <input type=hidden name="authors" value=<%=book.authors%> />
            <input type=hidden name="description" value=<%=book.description%> />
            <button>add to my favorites</button>
          </form>
        <% }) %>
         
        <div class="four">
          <div class="footer"></div>
          <div class="footer"></div>
          <div class="footer"></div>
          <div class="footer"></div>
        </div>
      </div>
    </main>
  </body>
</html>