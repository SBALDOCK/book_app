<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <div class="banner">
      <h1>Book Favorites</h1>
    </div>
    <div class="container">
      <a href="/add">search for a book</a>
      <h2>You have <%=books.length%> books saved.</h2>
          <div class="content">
          <% books.forEach(book => { %>
            <img src="<%= book.image%>" alt="picture of book" />
            <h3><%= book.title%></h3>
            <h4><%= book.author %></h4>
            <p><%= book.description%></p>
            <a href="/books/<%= book.id %>">show details</a>
          <% }) %>
          </div>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>